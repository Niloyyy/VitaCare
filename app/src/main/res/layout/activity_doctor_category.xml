<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <!-- Back Button INSIDE RelativeLayout -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:contentDescription="Back"
            android:src="@android:drawable/ic_media_previous"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            app:tint="#FFFFFF" />

        <!-- Main content container -->
        <LinearLayout
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/backButton"
            android:layout_marginTop="24dp"
            android:padding="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Doctor Specialty"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#0D47A1"
                android:layout_marginBottom="32dp" />

            <!-- Container for Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/rounded_bg_specialties"
                android:padding="24dp"
                android:elevation="6dp">

                <Button
                    android:id="@+id/buttonHeart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="â¤ï¸ Heart Specialist"
                    android:backgroundTint="#EF5350"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/buttonOrtho"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ¦´ Orthopedics"
                    android:backgroundTint="#66BB6A"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/buttonMedicine"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’Š Medicine"
                    android:backgroundTint="#42A5F5"
                    android:textColor="@android:color/white"
                    android:layout_marginBottom="16dp" />

                <Button
                    android:id="@+id/buttonKidney"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸ©º Kidney Specialist"
                    android:backgroundTint="#AB47BC"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
